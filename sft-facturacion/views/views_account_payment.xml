      <record id="account_payment_sft_pago_view" model="ir.ui.view">
         <field name="name">account.payment.form</field>
         <field name="model">account.payment</field>
         <field name="inherit_id" ref="account.view_account_payment_form" />
         <field name="arch" type="xml">
            <xpath expr="//field[@name='communication']" position="after">
               <!--  'readonly':[('puede_editar','=',False)],   -->
               <field name="tipocambiop" attrs="{'invisible':[('timbrar_pago', '=', False)], 'readonly':[('puede_editar','=',False)]}" />
               <field name="formadepagop_id" attrs="{'invisible':[('timbrar_pago', '=', False)], 'readonly':[('puede_editar','=',False)]}" />
               <field name="moneda_factura" attrs="{'invisible':[('timbrar_pago', '=', False)], 'readonly':[('puede_editar','=',False)]}" />

               <!--<field name="moneda_p" attrs="{'invisible':[('timbrar_pago', '=', False)], 'readonly':[('puede_editar','=',False)]}"  />-->
               <field name="imp_saldo_ant" attrs="{'invisible':[('timbrar_pago', '=', False)], 'readonly':[('puede_editar','=',False)]}" />
               <field name="imp_pagado" attrs="{'invisible':[('timbrar_pago', '=', False)], 'readonly':[('puede_editar','=',False)]}"  />
               <field name="imp_saldo_insoluto" attrs="{'invisible':[('timbrar_pago', '=', False)], 'readonly':[('puede_editar','=',False)]}"  />

               <field name="no_operacion" attrs="{'invisible':[('timbrar_pago', '=', False)], 'readonly':[('puede_editar','=',False)]}" />
               <field name="no_parcialidad" attrs="{'invisible':[('timbrar_pago', '=', False)], 'readonly':[('puede_editar','=',False)]}"  />

               <field name="puede_editar" invisible="1"/>


            </xpath>



            <xpath expr="/form/sheet[1]/group[1]/group[2]" position="after">
               <group attrs="{'invisible':[('timbrar_pago', '=', False)], 'readonly':[('puede_editar','=',False)]}">
                  <div colspan="2">
                     <center>
                        <span>
                           <h3 style="display:inline">Mis Datos bancarios</h3>
                        </span>
                     </center>
                  </div>
                  <field name="rfc_emisor_cta_ben" editable="true" attrs="{'invisible':[('ocultar', '=', True)], 'readonly':[('puede_editar','=',False)]}" />
                  <field name="cta_beneficiario" attrs="{'invisible':[('ocultar', '=', True)], 'readonly':[('puede_editar','=',False)]}" />
               </group>
               <group attrs="{'invisible':[('timbrar_pago', '=', False)], 'readonly':[('puede_editar','=',False)]}">
                  <div colspan="2">
                     <center>
                        <span>
                           <h3 style="display:inline">Datos bancarios de mi cliente</h3>
                        </span>
                     </center>
                  </div>
                  <field name="nom_banco_ord_ext_id" attrs="{'invisible':[('ocultar', '=', True)], 'readonly':[('puede_editar','=',False)]}" />
                  <field name="rfc_emisor_cta_ord" attrs="{'invisible':[('ocultar', '=', True)], 'readonly':[('puede_editar','=',False)]}" />
                  <field name="cta_ordenante" attrs="{'invisible':[('ocultar', '=', True)], 'readonly':[('puede_editar','=',False)]}" />
                  <field name="timbrar_pago" invisible="1" />
               </group>
            </xpath>

            <xpath expr="//div[@name='amount_div']" position="after">
               <field name="timbrada" />
               <field name="tipocambio_oper" />
               <field name="uuid" attrs="{'invisible':[('timbrar_pago', '=', False)]}" />
               <field name="ocultar" invisible="1" />
               <field name="timbrar_pago" invisible="1" />
               <field name="ref" invisible="1" />
               <field name="puede_cancelar" invisible="1"  />
               <field name="sustituye_pago" attrs="{'invisible':[('timbrar_pago', '=', False)], 'readonly':[('puede_editar','=',False)]}" />
               <field name="pago_sustituye" domain="['&amp;',('ref', '=', ref),('state', '=', 'canceled')]" attrs="{'invisible':[('sustituye_pago', '=', False)], 'readonly':[('puede_editar','=',False)]}" options="{'no_create': True, 'no_create_edit':True}"  />

            </xpath>

            <xpath expr="/form/header/button" position="after">
               <button name="Validar_y_Timbrar_Pago" attrs="{'invisible': ['|',('timbrada','!=','Sin Timbrar'),('timbrar_pago','=',False) ]}" type="object" string="Timbrar Pago" class="oe_highlight" />
               <button name="descargar_factura_pdf" attrs="{'invisible': [('timbrada','!=','Timbrada') ]}" type="object" string="Descargar Factura PDF" icon="fa-file-pdf-o" />
               <button name="descargar_factura_xml" attrs="{'invisible': [('timbrada','!=','Timbrada') ]}" type="object" string="Descargar Archivo XML" icon="fa-file-text" />

               <button name="cancelar_pagos_timbrada"  attrs="{'invisible': ['|',('timbrada','!=','Timbrada'),('timbrar_pago','=',False) ]}"    string="Cancelar Timbre del Pago" icon="fa-times" type="object" />
            </xpath>



         </field>
      </record>
